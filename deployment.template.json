{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "edgetest": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "lefitchereg1.azurecr.io/edge_agent_test:0.0.18-amd64",
              "createOptions": {
                "ExposedPorts": {
                  "9600/tcp": {}
                }
              }
            }
          },
          "edgeHub": {
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0.9-rc2",
              "createOptions": {
                "ExposedPorts": {
                  "9600/tcp": {},
                  "5671/tcp": {},
                  "8883/tcp": {}
                }
              }
            },
            "type": "docker",
            "env": {
              "experimentalfeatures__enabled": {
                "value": true
              },
              "experimentalfeatures__enableMetrics": {
                "value": true
              }
            },
            "status": "running",
            "restartPolicy": "always"
          }
        },
        "modules": {
          "MetricsCollector": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.MetricsCollector}",
              "createOptions": {}
            },
            "env": {
              "AzMonWorkspaceId": {
                "value": "$AZ_MON_ID"
              },
              "AzMonWorkspaceKey": {
                "value": "$AZ_MON_KEY"
              }
            }
          },
          "SimulatedTemperatureSensor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-simulated-temperature-sensor:1.0",
              "createOptions": {}
            }
          },
          "Crasher": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "lefitchereg1.azurecr.io/crasher:0.0.11-amd64",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "MetricsCollectorToIoTHub": "FROM /messages/modules/MetricsCollector/outputs/* INTO $upstream",
          "sensorToMetricsCollector": "FROM /messages/modules/SimulatedTemperatureSensor/outputs/temperatureOutput INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "MetricsCollector": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "scrapeFrequencySecs": 10,
        "metricsFormat": "Json",
        "syncTarget": "AzureLogAnalytics",
        "endpoints": {
          "edgeHub": "http://edgeHub:9600/metrics",
          "edgeAgent": "http://edgeAgent:9600/metrics"
        }
      }
    }
  }
}